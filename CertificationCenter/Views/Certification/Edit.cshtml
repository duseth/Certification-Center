@using System.Collections.Specialized
@using Microsoft.AspNetCore.Identity
@inject UserManager<User> UserManager
@model CertificationCenter.ViewModels.EditCertificationViewModel

@{
    ViewData["Title"] = "Редактирование аттестации";
    Layout = "_Layout";
    List<User> users = new List<User>();
    var allUsers = UserManager.Users.ToList();
    foreach (User user in allUsers)
    {
        var roles = await UserManager.GetRolesAsync(user);
        if (!roles.Contains("admin"))
        {
            users.Add(user);
        }
    }
}

<h2>@ViewData["Title"]</h2>
<form asp-action="Edit" asp-controller="Certification">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name" class="control-label">Название</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label">Описание</label>
        <input type="text" asp-for="Description" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DatetimeEnd" class="control-label">Срок окончания</label>
        <input type="date" asp-for="DatetimeEnd" class="form-control">
    </div>
    <div class="form-group">
        <div class="container row col-lg-12 button-group">
            <button type="button" class="btn btn-outline-secondary dropdown-toggle" data-toggle="dropdown">Пользователи</button>
            <ul class="dropdown-menu">
                @foreach (User user in UserManager.Users.ToList())
                {
                    var roles = await UserManager.GetRolesAsync(user);
                    if (!roles.Contains("admin"))
                    {
                        if (Model.Users.Contains(user.Id))
                        {
                            <li><input type="checkbox" name="user" checked value=@user.Id>@user.UserName (@user.Email)</li>
                        }
                        else
                        {
                            <li><input type="checkbox" name="user" value=@user.Id>@user.UserName (@user.Email)</li>
                        }
                    }
                }
            </ul>
        </div>
    </div>
    <div class="form-group">
        <div class="container">
            <div class="row clearfix">
                <div class="col-md-12 column">
                    <h4>Вопросы</h4>
                    <table class="table table-bordered table-hover" id="tab_logic">
                        <tr>
                            <th class="text-center">Вопрос</th>
                            <th class="text-center">Ответ на вопрос</th>
                        </tr>
                        @for (int j = 0; j < Model.Questions.Count; j++)
                        {
                            <tr id="addr@(j)">
                                <td>
                                    <input asp-for="Questions[j].QuestionString" class="form-control" />
                                </td>
                                <td>
                                    <input asp-for="Questions[j].AnswerString" class="form-control" />
                                </td>
                            </tr>
                        }
                        <tr id="addr@(Model.Questions.Count)">
                    </table>
                </div>
            </div>
            <div>
                <button id='add_row' type="button" class="btn btn-info">Добавить вопрос</button>
                <button id='delete_row' type="button" class="btn btn-info">Удалить вопрос</button>
            </div>
        </div>
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-outline-primary" />
    </div>
</form>

@section Scripts{
    <script type="text/javascript">
        $('.dropdown-menu a').on('click', function (event) {
            let $target = $(event.currentTarget),
                val = $target.attr('data-value'),
                $inp = $target.find('input'),
                idx;
            if ((idx = options.indexOf(val)) > -1) {
                options.splice(idx, 1);
                setTimeout(function () { $inp.prop('checked', false) }, 0);
            } else {
                options.push(val);
                setTimeout(function () { $inp.prop('checked', true) }, 0);
            }
            $(event.target).blur();
            return false;
        });
    </script>

    <script>
    $(document).ready(function(){
        var i=@Model.Questions.Count;
        $("#add_row").click(function () {
            $('#addr' + i).html("<td><input name='Questions[" + i + "].QuestionString'  class='form-control input-md' /></td><td><input  name='Questions[" + i +"].AnswerString'  class='form-control input-md'></td>");
            $('#tab_logic').append('<tr id="addr'+(i+1)+'"></tr>');
            i++;
        });
        $("#delete_row").click(function(){
            if(i>1){
                $("#addr"+(i-1)).html('');
                i--;
            }
        });
    });
    </script>
}