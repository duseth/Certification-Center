@model IEnumerable<CertificationCenter.Models.Answer>

@{
    ViewData["Title"] = "Ответы на вопрсоы";
}

<h1>Index</h1>
<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Результаты</h2>
        </div>
    </div>

    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Вопрос
                    </th>
                    <th>
                        Ответ
                    </th>
                    <th>
                        Оценка
                    </th>
                    <th>
                        Отвечал
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr height="70px">
                        <td width="15%">@obj.Question</td>
                        <td width="35%">@obj.AnswerString</td>
                        <td>@obj.User</td>
                        <td width="20%">@if (obj.IsCorrect)
                        {
                            <p>Вы ответили верно</p>
                        }
                        else
                        {
                            <p>Вы ответили неверно</p>
                        }</td>
                        <td class="text-center">
                            <div class="w-75 btn">
                                <a asp-controller="Answer" class="btn btn-primary mx-2">
                                    <i class="fas fa-edit"></i> Посмотреть ответы
                                </a>
                                
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    }
    else
    {
        <p>Вы еще не проходили тесты</p>
    }



</div>